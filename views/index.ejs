<html>
    <head>
        <title> Mini MessageBoard</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div class="header">
            <h1 style="text-align: center;"><%= title %></h1>
            <a href="/new">
                <button id="new">+ New Message</button>
            </a>
        </div>
        <hr>
        <div class="container">
            <% messages.forEach((message)=>{%>
                <div class="messageBox">
                    <h2 id="user"><%= message.user %></h2>
                    <h3 id="text"><%= message.text %></h3>
                    <h3 style="color: gray;" id="time"><%= message.added %></h3>
                </div>
           <% })%>
        </div>
        <footer id="footer">
            Made with ❤️ by <a href="https://github.com/Garuna-A/", target="_blank">Anurag</a>
        </footer>
    </body>
</html>